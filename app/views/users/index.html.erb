<div class="fuield">
<h1>一覧</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>pass</th>
  </tr>
  <span><%= notice %></span>
<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'アカウント詳細を確認する', user_path(user.id) %></td>
    <td><%= link_to "アカウントを編集する", edit_user_path(user.id) %></td>
    <td><%= link_to 'アカウント削除', user_path(user.id),method: :delete,
    data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>
</div>
