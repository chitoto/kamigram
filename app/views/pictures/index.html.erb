<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= picture.content %></td>
        <td><%= picture.image %></td>
        <td><%= picture.user %></td>
        <td><%= link_to 'Show', picture_path(picture.id) %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %></td>
        <td><%= link_to 'Destroy', picture_path(picture.id), method: :delete, data: { confirm: '削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
